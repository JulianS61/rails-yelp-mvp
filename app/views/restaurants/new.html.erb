<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name, class: 'mt-3' %>
  <%= f.input :address %>
  <div class="form-row">
    <div class="col-md-6">
      <%= f.input :category, collection: Restaurant::CATEGORIES, selected: Restaurant::CATEGORIES[2] %>
    </div>
    <div class="col-md-6">
      <%= f.input :phone_number %>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= f.submit 'Add Restaurant', class: 'btn btn-primary btn-block' %>
    </div>
    <div class="col-6">
      <%= link_to "Cancel", :back, class: 'btn btn-outline-danger btn-block' %>
    </div>
  </div>
<% end %>
