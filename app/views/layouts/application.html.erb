<!DOCTYPE html>
<html>

  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>

    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-primary justify-content-between mb-3">
      <%= link_to "Restaurant Reviewer" , restaurants_path, class: "navbar-brand mb-0 h1" %>
      <% if params[:action]=="index" %>
        <%= link_to "Add New Restaurant" , new_restaurant_path, class: "btn btn-outline-light my-2 my-sm-0" %>
      <% elsif params[:action]=="show"%>
        <%= link_to "Back to list" , restaurants_path, class: "btn btn-outline-light my-2 my-sm-0" %>
      <% end %>
    </nav>

    <div class="container">
      <%= yield %>
    </div>

  </body>

</html>
